{
  "name": "ytgify-firefox",
  "version": "1.0.0",
  "description": "YTgify for Firefox - Turn your favorite YouTube moments into shareable GIFs.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:webpack dev:firefox",
    "dev:webpack": "webpack --config webpack.config.cjs --mode development --watch",
    "dev:firefox": "web-ext run --source-dir dist --firefox-profile ytgify-dev --keep-profile-changes",
    "build": "webpack --config webpack.config.cjs --mode production",
    "build:watch": "webpack --config webpack.config.cjs --mode development --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "web-ext lint --source-dir dist",
    "lint:code": "eslint 'src/**/*.ts' 'src/**/*.tsx'",
    "lint:fix": "eslint 'src/**/*.ts' 'src/**/*.tsx' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}' 'tests/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css}' 'tests/**/*.{ts,tsx}'",
    "validate": "npm run typecheck && npm run lint:code && npm test",
    "package": "web-ext build --source-dir dist --overwrite-dest",
    "sign": "web-ext sign --source-dir dist",
    "test": "NODE_OPTIONS='--max-old-space-size=16384' jest --config tests/jest.config.cjs",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=16384' jest --config tests/jest.config.cjs --coverage",
    "test:watch": "jest --config tests/jest.config.cjs --watch",
    "test:e2e": "playwright test --config tests/playwright.config.ts",
    "test:e2e:headed": "playwright test --config tests/playwright.config.ts --headed",
    "test:e2e:mock": "playwright test --config tests/playwright-mock.config.ts",
    "test:e2e:mock:headed": "playwright test --config tests/playwright-mock.config.ts --headed",
    "generate:test-videos": "cd tests/e2e-mock/fixtures/videos && chmod +x generate-test-videos.sh && ./generate-test-videos.sh",
    "test:all": "npm test && npm run test:e2e:mock",
    "test:selenium:poc": "tsx tests/selenium/poc-test.ts",
    "test:selenium:poc:headed": "HEADLESS=false tsx tests/selenium/poc-test.ts",
    "test:selenium:real": "jest --config tests/selenium/jest.config.cjs",
    "test:selenium:real:headed": "HEADLESS=false jest --config tests/selenium/jest.config.cjs",
    "test:selenium:mock": "jest --config tests/selenium/jest.config.mock.cjs",
    "test:selenium:mock:headed": "HEADLESS=false jest --config tests/selenium/jest.config.mock.cjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/firefox-webext-browser": "^120.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "geckodriver": "^6.0.2",
    "globals": "^16.4.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "selenium-webdriver": "^4.37.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.43.0",
    "web-ext": "^8.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "gif.js": "^0.2.0",
    "gifenc": "^1.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  }
}
